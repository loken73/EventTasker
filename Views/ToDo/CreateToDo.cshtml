@model CreateToDoViewModel

<br>

<form asp-controller="ToDo" asp-action="CreateToDo" method="POST" role="form">
  <legend>Create Tasks</legend>

  <div class="form-group">
    <label asp-for="User"></label>
    <input asp-for="User" type="text" class="form-control" id="" placeholder="Input field">
  </div>

  <div class="form-group">
    <label asp-for="TaskTitle"></label>
    <input asp-for="TaskTitle" type="text" class="form-control" id="" placeholder="Input field">
  </div>

  <div class="form-group">
    <label asp-for="TaskDescription"></label>
    <textarea asp-for="TaskDescription" class="form-control" id="" placeholder="Input field"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
